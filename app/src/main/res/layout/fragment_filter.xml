<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="superbiayang.imageprocessing.FilterFragment">

    <EditText
        android:id="@+id/median_blur_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/median_blur_button"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/median_blur_button"
        android:layout_gravity="start|top"
        android:inputType="number"
        android:text="3" />

    <Button
        android:id="@+id/median_blur_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/median_blur_editText"
        android:layout_gravity="start|top"
        android:onClick="onFilterButtonPressed"
        android:text="median" />

    <Button
        android:id="@+id/mean_blur_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:onClick="onFilterButtonPressed"
        android:text="mean" />

    <Button
        android:id="@+id/gaussian_blur_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end|top"
        android:onClick="onFilterButtonPressed"
        android:text="gaussian" />

</RelativeLayout>
