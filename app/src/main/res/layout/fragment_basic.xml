<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.fragment.BasicFragment">

    <Button
        android:id="@+id/basic_red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/channel_separation_label"
        android:text="red" />

    <Button
        android:id="@+id/basic_green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel_separation_label"
        android:layout_toEndOf="@+id/basic_red_button"
        android:text="green" />

    <Button
        android:id="@+id/basic_blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/basic_green_button"
        android:layout_toEndOf="@+id/basic_green_button"
        android:text="blue" />

    <TextView
        android:id="@+id/channel_separation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="channel separation"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
